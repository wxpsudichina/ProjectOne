<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">
    　　　

    <LinearLayout
        android:id="@+id/lin_yue_time"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="@drawable/linlay_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100px"
            android:src="@mipmap/iv_home_fragment_yue_clock" />

        <TextView
            android:id="@+id/tv_home_fragment_yue_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50px"
            android:text="预约时间"
            android:textColor="#666666"
            android:textSize="36px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:layout_marginTop="10px"
        android:background="@drawable/linlay_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_home_fragment_yue_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="110px"
                android:drawableLeft="@mipmap/iv_home_fragment_start"
                android:drawablePadding="50px"
                android:editable="false"
                android:singleLine="true"
                android:text="锋创科技园"
                android:tag="et_yue_start"
                android:textColor="#666666"
                android:textSize="28px"
                app:met_hideUnderline="true" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="#999999">

        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_home_fragment_yue_stop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="110px"
                android:drawableLeft="@mipmap/iv_home_fragment_stop"
                android:drawablePadding="50px"
                android:editable="false"
                android:singleLine="true"
                android:text="成都双流机场"
                android:tag="et_yue_stop"
                android:textColor="#666666"
                android:textSize="28px"
                app:met_hideUnderline="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_home_fragment_yue"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="#ffffff"
        android:text="确定"
        android:textColor="#666666"
        android:textSize="36px" />
    </LinearLayout>
</LinearLayout>
