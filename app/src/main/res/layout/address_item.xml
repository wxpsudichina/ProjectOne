<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30px"
            android:layout_height="240px">
            <TextView
                android:text="武小鹏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34px"
                android:layout_marginLeft="30px"
                android:textColor="#333333"
                android:textSize="40px"
                android:textStyle="bold"
                />
            <TextView
                android:text="13716556242"
                android:textColor="#333333"
                android:textSize="40px"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:layout_marginTop="34px"
                />
            <TextView
                android:text="北京市大兴区锋创科技园6号楼3层分通科技有限公司"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:textSize="40px"
                android:textColor="#333333"
                android:layout_marginTop="105px"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#efefef"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px">
                <ImageView
                    android:src="@mipmap/iv_address_normal"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="40px"
                    />
                <TextView
                    android:text="设为默认"
                    android:textSize="34px"
                    android:textColor="#333333"
                    android:layout_marginLeft="110px"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@mipmap/iv_address_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="308px"
                    />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="编辑"
                     android:layout_marginTop="20px"
                     android:layout_alignParentRight="true"
                     android:layout_marginRight="222px"
                     android:textSize="34px"
                     />

            <ImageView
                android:src="@mipmap/iv_address_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:layout_marginTop="20px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:textSize="34px"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>